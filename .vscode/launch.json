    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["generate", "-r", "${workspaceFolder}/test"]
        },
        {
            "name": "Serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["serve", "-r", "${workspaceFolder}/test", "-p", ":8080"]
        },
    ]
}